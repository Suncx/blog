<%= simple_form_for resource, url: url, html: {class: "form-horizontal", novalidate: true} do |f| %>
  <div class="control-group">
    <label class="control-label" for="inputEmail">名称</label>
    <div class="controls">
      <%= f.input :name, :label => false%>
    </div>
  </div>
  <div class="control-group">
